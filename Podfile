
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '10.0'

# ignore all warnings from all pods
inhibit_all_warnings!

target 'Jimbo' do
    use_frameworks!

    # Dependency injection framework
    pod 'Swinject'
    pod 'SwinjectStoryboard'
    pod 'SwinjectAutoregistration'

    # Router/trasitions between modules
    pod 'LightRoute', :git => 'https://github.com/apolovinka/LightRoute.git'

    # Reactive Programming
    pod 'RxSwift',    '~> 4.0'
    pod 'RxCocoa',    '~> 4.0'

    # Data Storage
    pod 'RealmSwift'

    # JSON Mapping
    pod 'ObjectMapper', '~> 3.4'
    pod 'ObjectMapperAdditions/Realm', '~> 6.0'

    # Custom Events
    pod 'Emitter'

    # Networking
    pod 'Alamofire'

    # Web Images & Video
    pod 'Kingfisher'

    # Auto Layout Helper
    pod 'PureLayout'

end
